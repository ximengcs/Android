<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:text="@string/phone_label"
            android:textSize="22dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:text="@string/email_label"
            android:textSize="22dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:text="@string/weixin_label"
            android:textSize="22dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:text="@string/special_skill_label"
            android:textSize="22dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/phone_label"
            android:layout_width="220dp"
            android:layout_height="45dp" />

        <EditText
            android:id="@+id/email_label"
            android:layout_width="220dp"
            android:layout_height="45dp" />

        <EditText
            android:id="@+id/weixin_label"
            android:layout_width="220dp"
            android:layout_height="45dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/music"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="@string/music"
                android:textSize="7dp" />

            <CheckBox
                android:id="@+id/arts"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="@string/arts"
                android:textSize="7dp" />

            <CheckBox
                android:id="@+id/handwriting"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="@string/handwriting"
                android:textSize="7dp" />

            <CheckBox
                android:id="@+id/basketball"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="@string/basketball"
                android:textSize="7dp" />

            <CheckBox
                android:id="@+id/football"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="@string/football"
                android:textSize="7dp" />

            <CheckBox
                android:id="@+id/swimming"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="@string/swimming"
                android:textSize="7dp" />
        </LinearLayout>

        <Button
            android:id="@+id/commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="@string/commit_button"
            android:textSize="22dp" />
    </LinearLayout>
</LinearLayout>
